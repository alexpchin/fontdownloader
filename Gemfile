# Gemfile
source 'https://rubygems.org'

# Ruby version
ruby '2.1.2'

# Rake & Sinatra
gem 'rake'
gem 'sinatra'

# Parse CSS
gem 'nokogiri' 
gem 'css_parser'

# Zip files
gem 'rubyzip'
gem 'sinatra-xsendfile'

# Compression & display
gem 'sprockets'
gem 'yui-compressor'
gem 'coffee-script'
gem 'sass'
gem 'haml'

# Sinatra flash
gem 'sinatra-flash'
gem 'sinatra-redirect-with-flash'

# Resolving URLs
gem 'url-resolver'

group :test, :development do
  gem 'pry'
  gem 'pry-byebug'
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rack'
end